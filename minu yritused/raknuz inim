class Employee:

    num_Employee=0

    def __init__(self, first_name, last_name, salary, background, nationality):

        self.first_name = first_name
        self.last_name = last_name
        self.salary = salary
        self.background = background
        self.nationality = nationality
        Employee.num_Employee +=1

    def full_name(self):
        return '{} {}'.format(self.first_name, self.last_name)
    
    def email(self):
        return '{} {}'.format(self.first_name, self.last_name+'@company.com')



person1=Employee("Alex", "Kass", 4000, "CSE", "Estonian")
person2=Employee("Tiit", "Marvel", 2000, "Photography", "Etonian")
person3=Employee("Vladimir", "Faaren", 8000, "Csi", "Russian")
person4=Employee("Katy", "Rien", 2500, "Media", "English")


print("How many people: ", Employee.num_Employee)
print("----")

print(person1.full_name())
print(person1.email())
print(person1.salary)
print(person1.background)
print(person1.nationality)
print("----")

print(person2.full_name())
print(person2.email())
print(person2.salary)
print(person2.background)
print(person2.nationality)
print("----")

print(person3.full_name())
print(person3.email())
print(person3.salary)
print(person3.background)
print(person3.nationality)
print("----")

print(person4.full_name())
print(person4.email())
print(person4.salary)
print(person4.background)
print(person4.nationality)

